{
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "enabled": true
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "enabled": true
    }
  ],
  "helm-values": {
    "fileMatch": [
      "(^|/)values\\.yaml$",
      "(^|/)values-.*\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)values\\.yaml$",
      "(^|/)values-.*\\.yaml$"
    ]
  }
}
