{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^charts/.+/Chart\\.yaml$"
      ],
      "matchStrings": [
        "version: (?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)\\nappVersion: (?<appVersion>[^\\s]+)"
      ],
      "depNameTemplate": "chart-version",
      "datasourceTemplate": "npm",
      "versioningTemplate": "semver",
      "autoReplaceStringTemplate": "version: {{{replace '(\\d+)\\.(\\d+)\\.(\\d+)' '$1.$2.{{add (parseInt (extract currentValue '\\d+$')) 1}}' currentValue}}}\nappVersion: {{{appVersion}}}"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^charts/.+/Chart\\.yaml$"
      ],
      "matchStrings": [
        "appVersion: (?<currentValue>[^\\s]+)[\\s\\S]*?lookupName: \"(?<depName>[^\"\\s]+)\""
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "helmv3": {
    "enabled": true
  },
  "recreateClosed": true
}