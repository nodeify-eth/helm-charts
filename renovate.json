{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^charts/.+/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[^\"\\s]+)\"?"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{#if packageFile}}{{packageFile}}{{/if}}",
      "packageNameTemplate": "{{#lookup packageFile 'image.repository' ''}}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "enabled": true
    }
  ]
}