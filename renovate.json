{
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "regexManagers": [
    {
      "fileMatch": ["^values\\.yaml$", "^values-.*\\.yaml$"],
      "matchStrings": [
        "image:\\s*['\"]?(?<depName>[^:'\"]*)(?::(?<currentValue>[^'\"]*))?"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}