{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchManagers": ["helmv3", "helm-values"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "bumpVersion": "patch"
    }
  ],
  "helmv3": {
    "fileMatch": ["(^|/)Chart\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["(^|/)values\\.ya?ml$"]
  }
}