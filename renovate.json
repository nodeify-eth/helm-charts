{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^charts/.+/Chart\\.yaml$"
      ],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[^\"\\s]+)\"?[\\s\\S]*?lookupName:\\s*\"?(?<depName>[^\"\\s]+)\"?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "helmv3": {
    "enabled": true
  },
  "postUpgradeTasks": {
    "commands": [
      "sed -i 's/^version: \\([0-9]\\+\\.[0-9]\\+\\.[0-9]\\+\\)/version: \\1.PLACEHOLDER/' \"${1}\"",
      "sed -i 's/\\([0-9]\\+\\.[0-9]\\+\\.\\)[0-9]\\+\\.PLACEHOLDER/\\1'$(($( sed -n 's/^version: .*\\.\\([0-9]\\+\\)\\.PLACEHOLDER/\\1/p' \"${1}\" )+1))'/' \"${1}\""
    ],
    "fileFilters": [
      "charts/*/Chart.yaml"
    ],
    "executionMode": "update"
  },
  "recreateClosed": true
}