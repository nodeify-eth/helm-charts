{
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "regexManagers": [
    {
      "description": "Update appVersion in Chart.yaml based on Docker image",
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "repository:\\s*(?<depName>[^\\s]+)[\\s\\S]*?Chart\\.appVersion"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
      "extractVersionTemplate": "^v?(?<version>.*)$"
    }
  ]
}
