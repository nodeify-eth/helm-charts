{
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Chart\\.yaml$"
      ],
      "matchStrings": [
        "appVersion:\\s*\"(?<currentValue>.*?)\""
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "{{#if repository}}{{{repository}}}/{{/if}}{{{image}}}",
      "extractVersionTemplate": "^.*$"
    }
  ],
  "dependencyDashboard": true
}
