{
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchDatasources": ["helm"],
      "enabled": true
    }
  ],
  "helm-values": {
    "fileMatch": ["(^|/)values\\.yaml$", "(^|/)values-.*\\.yaml$"]
  },
  "kubernetes": {
    "fileMatch": ["(^|/)values\\.yaml$", "(^|/)values-.*\\.yaml$"]
  },
  "docker": {
    "enabled": true
  }
}