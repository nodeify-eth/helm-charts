{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^charts/.+/Chart\\.yaml$"
      ],
      "matchStrings": [
        "appVersion:\\s*\"?(?<currentValue>[^\"\\s]+)\"?[\\s\\S]*?lookupName:\\s*\"?(?<depName>[^\"\\s]+)\"?"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^charts/.+/Chart\\.yaml$"
      ],
      "matchStrings": [
        "version: (?<currentValue>[0-9]+\\.[0-9]+\\.[0-9]+)"
      ],
      "depNameTemplate": "{{ packageFile }}",
      "datasourceTemplate": "git",
      "autoReplaceStringTemplate": "version: {{#if isPatch}}{{replace '\\d+$' (add (parseInt (extract currentValue '\\d+$')) 1) currentValue}}{{else}}{{currentValue}}{{/if}}"
    }
  ],
  "helmv3": {
    "enabled": true
  },
  "postUpdateOptions": ["bumpChartVersion"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "extractVersion": "^v(?<version>.*)$",
      "bumpVersion": "patch",
      "semanticCommitType": "fix"
    }
  ],
  "recreateClosed": true
}